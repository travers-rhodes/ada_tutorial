<launch>
  <!-- start up the camera -->
  <include file="$(find ueye_cam)/launch/xs_bayer_rggb.launch"/>
  <node name="spoon_service" pkg="spoon_perception" type="perception_node.py"/>

  <arg name="track_pose_server_flags" default="-s -v"/>
  <arg name="simulate_mouth" default="false"/>
  <arg name="use_sim_time" default="false"/>

  <param name="use_sim_time" value="$(arg use_sim_time)"/>

  <node name="track_pose_service" pkg="ada_tutorial" type="track_pose_server.py" args="$(arg track_pose_server_flags)"/>
  <node name="spoon_feeder" pkg="ada_tutorial" type="spoon_feeder.py"/> 
  <node name="dummy_mouth_publisher" pkg="ada_tutorial" type="dummy_mouth_publisher.py" if="$(arg simulate_mouth)"/>
  <node name="play_trajectory_service" pkg="ada_tutorial" type="play_trajectory_server.py"/>

</launch>
